<Window x:Class="SunshineLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="pack://application:,,,/icon.ico"
        Title="SunshineLauncher" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0A090B"/>
                <GradientStop Color="#FF323535" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image x:Name="icon" Stretch="Fill" Source="pack://application:,,,/icon.png" Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
